@model OnlineStore.ViewModel.Role.RoleVM

@{
    ViewData["Title"] = "Add New Role";
}

<div class="c1">
    <h1 class="uid-10">@ViewData["Title"]</h1>

    <form asp-action="AddRole" method="post" class="uid-11">

        <div class="c2">
            <label asp-for="RoleName" class="uid-13"><i class="fas fa-user-tag"></i> Role Name</label>
            <input asp-for="RoleName" type="text" placeholder="Enter role name" class="uid-15">
            <span style="color :red" asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <div style="color :red" asp-validation-summary="All" class="text-danger"></div>

        <div class="mt-4">
            <button type="submit" class="c6 uid-57"><i class="fas fa-plus-circle"></i> Create Role</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}