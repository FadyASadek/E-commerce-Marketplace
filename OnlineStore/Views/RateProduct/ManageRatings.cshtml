@model IEnumerable<OnlineStore.Models.ProductRate>

@{
    ViewData["Title"] = "Manage Ratings";
    Layout = "_Layout";

    string RenderStars(int ratingValue)
    {
        string stars = "";
        for (int i = 0; i < 5; i++)
        {
            stars += i < ratingValue ? "★" : "☆";
        }
        return stars;
    }
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="products-actions">
    <h2 style="margin:0;">Manage Product Ratings</h2>
</div>

<div class="products-table">
    <table>
        <thead>
            <tr>
                <th>User</th>
                <th>Product</th>
                <th style="color: #ffc107;">Rating</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var rate in Model)
                {
                    <tr>
                        <td>@rate.User.UserName</td>
                        <td>
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@rate.productId" target="_blank">
                                @rate.product.Name
                            </a>
                        </td>
                        <td style="color: #ffc107; font-size: 1.2rem;" title="@rate.valueRate out of 5">
                            @RenderStars(rate.valueRate)
                        </td>
                        <td>@rate.CreateAt.ToString("yyyy-MM-dd hh:mm tt")</td>
                        <td>
                            <form asp-action="DeleteRating" asp-controller="RateProduct" asp-route-id="@rate.Id" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="button" class="delete-btn delete-rating-btn">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" style="text-align:center; padding: 20px;">No ratings found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.delete-rating-btn').on('click', function (e) {
                e.preventDefault();
                var form = $(this).closest('form');

                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Yes, delete it!',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                })
            });
        });
    </script>
}