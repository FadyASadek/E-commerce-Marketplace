@model IEnumerable<MSubCategory>

@{
    ViewData["Title"] = "Manage Sub-Categories";
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="products-actions">
    <h2 style="margin:0;">@ViewData["Title"]</h2>
    <a asp-action="AddSubCategory" asp-controller="SubCategory">
        <button class="add-product-btn">Add New Sub-Category</button>
    </a>
</div>

<div class="products-table">
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>Main Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>
                            <img src="@item.Image" style="width:60px; height:60px; object-fit: cover; border-radius: 5px;" alt="@item.Name" />
                        </td>
                        <td>@item.category.Name</td>
                        <td>
                            <a asp-action="EditSubcategory" asp-route-id="@item.Id" asp-controller="SubCategory">
                                <button class="edit-btn">Edit</button>
                            </a>

                            <form asp-action="delete" asp-route-id="@item.Id" asp-controller="SubCategory" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="button" class="delete-btn delete-subcategory-btn">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" style="text-align:center; padding: 20px;">No sub-categories found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.delete-subcategory-btn').on('click', function (e) {
                e.preventDefault();
                var form = $(this).closest('form');

                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });
    </script>
}