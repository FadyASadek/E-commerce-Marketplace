@model Order

@{
    ViewData["Title"] = $"Order Details - {Model.OrderNumber}";
    Layout = "_Layout";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">

<div class="order-details-container">
    <div class="order-header">
        <div>
            <h1>Order <a asp-action="MyOrders" title="Back to My Orders" class="order-id-link">#@Model.OrderNumber</a></h1>
            <p class="order-date">Placed on @Model.OrderDate.ToString("dd MMMM, yyyy")</p>
        </div>
        
    </div>

    <div class="progress-tracker">
        <div class="step active">
            <div class="step-icon"><i class="fas fa-check"></i></div>
            <div class="step-label">Order Placed</div>
        </div>
        <div class="progress-line"></div>
        <div class="step @(Model.OrderStatus == "Processing" || Model.OrderStatus == "Shipped" ? "active" : "")">
            <div class="step-icon"><i class="fas fa-box-open"></i></div>
            <div class="step-label">Processing</div>
        </div>
        <div class="progress-line"></div>
        <div class="step @(Model.OrderStatus == "Shipped" ? "active" : "")">
            <div class="step-icon"><i class="fas fa-truck"></i></div>
            <div class="step-label">Shipped</div>
        </div>
    </div>

    <div class="row gx-4">
        <div class="col-lg-8">
            <div class="card details-card">
                @foreach (var detail in Model.OrderDetails)
                {
                    <div class="product-item">
                        <img src="@detail.Product.MainImage" class="product-img" />
                        <div class="product-info">
                            <div style="font-weight:bold;" class="product-name">@detail.Product.Name</div>
                            <div class="product-qty text-muted">Quantity: @detail.Quantity</div>
                        </div>
                        <div class="product-price fw-bold">
                            $@((detail.Quantity * detail.Price).ToString("F2"))
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card summary-card">
                <h5 class="card-title">Shipping Address</h5>
                <p class="card-text">
                    <strong>@Model.RecipientName</strong><br>
                    @Model.ShippingAddress<br>
                    @Model.City<br>
                    @Model.RecipientPhone
                </p>
                <hr>
                <h5 class="card-title">Payment Summary</h5>
                <div class="d-flex justify-content-between text-muted">
                    <span>Subtotal</span>
                    <span>$@Model.OrderTotal.ToString("F2")</span>
                </div>
                <div class="d-flex justify-content-between text-muted mt-2">
                    <span>Shipping</span>
                    <span>FREE</span>
                </div>
                <hr>
                <div class="d-flex justify-content-between fw-bold fs-5">
                    <span>Total</span>
                    <span>$@Model.OrderTotal.ToString("F2")</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Plus Jakarta Sans', sans-serif;
        }

        .order-details-container {
            max-width: 1100px;
            margin: 2rem auto;
        }

        .order-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .order-id-link {
            color: #0d6efd;
            text-decoration: none;
        }

        .card {
            border: 1px solid #e9ecef;
            border-radius: 0.75rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.05);
            margin-bottom: 1.5rem;
            padding: 1.5rem;
        }

        .progress-tracker {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 2.5rem;
        }

        .step {
            text-align: center;
        }

        .step-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #e9ecef;
            color: #adb5bd;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 0.5rem auto;
            transition: all 0.3s ease;
        }

        .step-label {
            font-size: 0.85rem;
            color: #6c757d;
        }

        .step.active .step-icon {
            background-color: #0d6efd;
            color: #fff;
        }

        .step.active .step-label {
            color: #212529;
            font-weight: 600;
        }

        .progress-line {
            flex-grow: 1;
            height: 2px;
            background-color: #e9ecef;
        }

        .product-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem 0;
        }

            .product-item:not(:last-child) {
                border-bottom: 1px solid #f1f3f5;
            }

        .product-img {
            width: 64px;
            height: 64px;
            border-radius: 0.5rem;
            object-fit: cover;
        }

        .product-info {
            flex-grow: 1;
        }

        h5.card-title {
            font-size: 19px;
            margin-bottom: 10px;
        }

        .d-flex.justify-content-between.fw-bold.fs-5 {
            font-size: 30px;
            margin: 10px 0px;
        }
        .d-flex.justify-content-between.text-muted {
            width: fit-content;
            font-size: 18px;
            padding: 0px 0px;
            margin-bottom: 10px;
        }
        .d-flex.justify-content-between.text-muted.mt-2 {
            background-color: #69bf69;
            width: fit-content;
            font-size: 18px;
            padding: 6px 20px;
            margin-bottom: 10px;
            font-weight:400;
        }
        p.card-text {
            font-size: 18px;
            margin: 17px;
        }
        .product-name {
            font-weight: 600;
        }
    </style>
}