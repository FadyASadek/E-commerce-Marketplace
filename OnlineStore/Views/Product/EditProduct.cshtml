@model OnlineStore.ViewModel.ProductViewModel.EditProductVM

@{
    ViewData["Title"] = $"Edit Product: {Model.Name}";
    SelectList categortes = new SelectList(ViewBag.Categories, "Id", "Name", Model.category);
    SelectList sub = new SelectList(ViewBag.sub, "Id", "Name", Model.Subcategory);
}

<div class="c1">
    <h1 class="uid-10">@ViewData["Title"]</h1>

    <form asp-action="EditProduct" asp-route-id="@Model.id" method="post" enctype="multipart/form-data" class="uid-11">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="id" />
        <input type="hidden" asp-for="CurrentImage" />

        <div class="c2">
            <label asp-for="Name" class="uid-13"><i class="fas fa-tag"></i> Product Name</label>
            <input asp-for="Name" class="uid-15" />
            <span style="color:red;" asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="c3">
            <div class="c2">
                <label asp-for="Quantity" class="uid-18"><i class="fas fa-cubes"></i> Stock Quantity</label>
                <input asp-for="Quantity" type="number" min="0" class="uid-20" />
                <span style="color:red;" asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="c2">
                <label asp-for="Price" class="uid-22"><i class="fas fa-dollar-sign"></i> Price</label>
                <input asp-for="Price" type="number" min="0" step="0.01" class="uid-24" />
                <span style="color:red;" asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="c2">
            <label asp-for="Description" class="uid-26"><i class="fas fa-align-left"></i> Description</label>
            <textarea asp-for="Description" rows="4" class="uid-28"></textarea>
            <span style="color:red;" asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="c3">
            <div class="c2">
                <label for="category" class="uid-31"><i class="fas fa-sitemap"></i> Category</label>
                <select id="category" name="category" class="uid-33 form-control" asp-items="categortes" onchange="GetSubCategory()" required></select>
            </div>
            <div class="c2">
                <label asp-for="Subcategory" class="uid-41"><i class="fas fa-project-diagram"></i> Sub-Category</label>
                <select id="Subcategory" asp-for="Subcategory" class="uid-43 form-control" asp-items="sub" required></select>
                <span style="color:red;" asp-validation-for="Subcategory" class="text-danger"></span>
            </div>
        </div>

        <div class="c2">
            <label asp-for="MainImage" class="uid-46"><i class="fas fa-image"></i> Change Main Image (Optional)</label>
            <input asp-for="MainImage" type="file" accept="image/*" class="uid-48" id="imageInput">
            <span style="color:red;" asp-validation-for="MainImage" class="text-danger"></span>
        </div>

        <div class="c2">
            <label>Image Preview</label>
            <div class="c4 uid-49" id="imagePreviewContainer">
                <img id="previewImage" src="@Model.CurrentImage" alt="Current Product Image" style="max-width: 100%; max-height: 200px; border-radius: 5px;" />
            </div>
        </div>
        <div style="color:red;" asp-validation-summary="All" class="text-danger"></div>

        <div class="mt-4">
            <button type="submit" class="c6 uid-57"><i class="fas fa-save"></i> Save Changes</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            function GetSubCategory() {
                var categoryId = $("#category").val();
                if (!categoryId) {
                    $("#Subcategory").html('<option value="">Select a sub-category</option>');
                    return;
                }
                $.ajax({
                    type: "GET",
                    url: "/product/GetsubcategoryByCategoryId/" + categoryId,
                    success: function (data) {
                        var subCategoryDropdown = $("#Subcategory");
                        subCategoryDropdown.html("");
                        subCategoryDropdown.append('<option value="">Select Sub Category</option>');
                        $.each(data, function(i, item) {
                            subCategoryDropdown.append($('<option>', {
                                value: item.id,
                                text: item.name
                            }));
                        });
                    }
                });
            }
            $('#category').on('change', GetSubCategory);


            $("#imageInput").on("change", function (event) {
                var previewImage = $("#previewImage");
                if (event.target.files && event.target.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        previewImage.attr('src', e.target.result);
                    };
                    reader.readAsDataURL(event.target.files[0]);
                } else {
                    previewImage.attr('src', '@Model.CurrentImage');
                }
            });
        });
    </script>
}