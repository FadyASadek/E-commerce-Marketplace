@model CreateAcountVM

@{
	ViewData["Title"] = "Register";
}

<div class="container">
	<div class="form-container">
		<div class="header">
			<h1>Create an Account</h1>
			<p>Join us today and get started</p>
		</div>

		<form id="registerForm" asp-action="Register" asp-controller="account" novalidate>

			<div class="form-group">
				<label asp-for="Name"><i class="fas fa-user"></i> Name</label>
				<input asp-for="Name" placeholder="Enter your name">
				<span style="color:red !important; " asp-validation-for="Name" class=" "></span>
			</div>

			<div class="form-group">
				<label asp-for="email"><i class="fas fa-envelope"></i> Email</label>
				<input asp-for="email" placeholder="Enter your email">
				<span style="color:red !important;" asp-validation-for="email" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="phone"><i class="fas fa-phone"></i> Phone</label>
				<input asp-for="phone" placeholder="Enter your Phone Number">
				<span style="color:red !important;" asp-validation-for="phone" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="password"><i class="fas fa-lock"></i> Password</label>
				<div class="password-container">
					<input asp-for="password" placeholder="Create a password">
					<button type="button" class="toggle-password" id="togglePassword" tabindex="-1">
						<i class="fas fa-eye"></i>
					</button>
				</div>
				<span style="color:red !important;" asp-validation-for="password" class="text-danger"></span>

				<div class="password-strength">
					<div class="strength-meter">
						<div class="strength-bar" id="strengthBar"></div>
					</div>
					<div class="strength-text" id="strengthText">Password strength</div>
				</div>
			</div>

			<div class="form-group">
				<label asp-for="confirmpassword"><i class="fas fa-lock"></i> Confirm Password</label>
				<div class="password-container">
					<input asp-for="confirmpassword" placeholder="Confirm your password">
					<button type="button" class="toggle-password" id="toggleConfirmPassword" tabindex="-1">
						<i class="fas fa-eye"></i>
					</button>
				</div>
				<span style="color:red !important;" asp-validation-for="confirmpassword" class="text-danger"></span>
			</div>

			<div class="terms-container">
				<input type="checkbox" id="agreeTerms" name="agreeTerms" value="true" required>
				<label for="agreeTerms">I agree to the <a href="#" class="terms-link">Terms & Conditions</a> and <a href="#" class="terms-link">Privacy Policy</a></label>
				<div id="termsError" class="text-danger"></div>
			</div>

			<div style="color:red !important;" asp-validation-summary="All" class="text-danger"></div>

			<button type="submit" class="submit-btn">
				<i class="fas fa-user-plus"></i> Create Account
			</button>
		</form>

		<div class="social-signup">
			<p>Or sign up with</p>
			<div class="social-buttons">
				<form asp-controller="Account" asp-action="ExternalLogin" method="post">
					<input type="hidden" name="provider" value="Google" />
					<button type="submit" class="social-btn google"><i class="fab fa-google"></i></button>
				</form>
			</div>
		</div>

		<div class="form-footer">
			<p>Already have an account? <a asp-action="Login">Sign in</a></p>
		</div>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

	<script src="~/js/register.js"></script> 
}
