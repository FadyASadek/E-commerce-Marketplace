        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
    }

    .social-login p::before,
    .social-login p::after {
        width: 25%;
    }

    }

    button.nav-link.btn.btn-link.text-dark {
        display: block !important;
        margin: auto !important;
