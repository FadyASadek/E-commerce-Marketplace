@model LoginVM

@{
    ViewData["Title"] = "Login";
}




<div class="form-container">
    <div class="header">
        <h1>Welcome Back</h1>
        <p>Sign in to your account</p>
    </div>

    <form id="loginForm" asp-controller="account" asp-action="Login">
        <div class="form-group">
            <label asp-for="userName"><i class="fas fa-user"></i> Username</label>
            <input asp-for="userName" placeholder="Enter your user Name" required>
            <span style="color:red !important; " asp-validation-for="userName" class=" "></span>

        </div>

        <div class="form-group">
            <label asp-for="password"><i class="fas fa-lock"></i> Password</label>
            <div class="password-container">
                <input asp-for="password" type="password" id="password" name="password" placeholder="Enter your password" required>
                <button type="button" class="toggle-password" id="togglePassword" tabindex="-1">
                    <i class="fas fa-eye"></i>
                </button>

            </div>
            <span style="color:red !important; " asp-validation-for="password" class=" "></span>

        </div>

        <div class="form-options">
            <div class="remember-me">
                <input type="checkbox" asp-for="RememberMe" id="RememberMe" name="RememberMe">
                <label asp-for="RememberMe">Remember me</label>
            </div>
        </div>
        <div style="color:red !important;" asp-validation-summary="All" class="text-danger"></div>

        <button type="submit" class="submit-btn">
            <i class="fas fa-sign-in-alt"></i> Sign In
        </button>
    </form>

    <div class="social-login">
        <p>Or sign in with</p>
        <div class="social-buttons">
            <form asp-controller="Account" asp-action="ExternalLogin" method="post">
                <input type="hidden" name="provider" value="Google" />
                <button type="submit" class="social-btn google"><i class="fab fa-google"></i></button>
            </form>
        </div>
    </div>

    <div class="form-footer">
        <p>Don't have an account? <a asp-action="register" >Sign up</a></p>
    </div>
</div>






@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<style>
    import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

