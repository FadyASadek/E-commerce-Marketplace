@model OnlineStore.ViewModel.Admin.AdminDashboardViewModel;

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid dashboard-container">
    <h1 class="dashboard-header">@ViewData["Title"]</h1>

    <div class="row mt-4">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="stat-card card-sales">
                <div class="stat-icon"><i class="fas fa-dollar-sign"></i></div>
                <div class="stat-info">
                    <span class="stat-title">Total Revenue</span>
                    <span class="stat-value">$@Model.TotalRevenue.ToString("N2")</span>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="stat-card card-orders">
                <div class="stat-icon"><i class="fas fa-receipt"></i></div>
                <div class="stat-info">
                    <span class="stat-title">Total Orders</span>
                    <span class="stat-value">@Model.TotalOrders</span>
                </div>
                <a asp-action="AllOrders" asp-controller="Order" class="stat-link">View All</a>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="stat-card card-users">
                <div class="stat-icon"><i class="fas fa-users"></i></div>
                <div class="stat-info">
                    <span class="stat-title">Total Users</span>
                    <span class="stat-value">@Model.TotalUsers</span>
                </div>
                <a asp-action="GetAllUser" asp-controller="Account" class="stat-link">Manage Users</a>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="stat-card card-products">
                <div class="stat-icon"><i class="fas fa-box-open"></i></div>
                <div class="stat-info">
                    <span class="stat-title">Total Products</span>
                    <span class="stat-value">@Model.TotalProducts</span>
                </div>
                <a asp-action="Index" asp-controller="Product" class="stat-link">Manage Products</a>
            </div>
        </div>
    </div>

   
</div>

@section Styles {
    <style>
        .dashboard-container { padding: 2rem; }
        .dashboard-header { font-weight: 700; margin-bottom: 0.5rem; }
        .stat-card { background-color: #fff; border-radius: 12px; padding: 1.5rem; display: flex; align-items: center; gap: 1.5rem; box-shadow: 0 4px 20px rgba(0,0,0,0.05); position: relative; overflow: hidden; height: 100%; }
        .stat-card::before { content: ''; position: absolute; top: 0; left: 0; width: 5px; height: 100%; }
        .card-sales::before { background-color: #198754; } 
        .card-orders::before { background-color: #6f42c1; } 
        .card-users::before { background-color: #0d6efd; } 
        .card-products::before { background-color: #fd7e14; } 
        .stat-icon { font-size: 2.2rem; padding: 1rem; border-radius: 50%; display: flex; align-items: center; justify-content: center; }
        .card-sales .stat-icon { color: #198754; background-color: #d1e7dd; }
        .card-orders .stat-icon { color: #6f42c1; background-color: #e2d9f3; }
        .card-users .stat-icon { color: #0d6efd; background-color: #cce5ff; }
        .card-products .stat-icon { color: #fd7e14; background-color: #ffe5d0; }
        .stat-info { display: flex; flex-direction: column; }
        .stat-title { color: #6c757d; font-size: 1rem; margin-bottom: 0.25rem; }
        .stat-value { font-size: 1.8rem; font-weight: 700; color: #212529; }
        .stat-link { position: absolute; bottom: 10px; right: 15px; font-size: 0.8rem; text-decoration: none; }
    </style>
}